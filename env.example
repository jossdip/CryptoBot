# Local secrets for CryptoBot (example)
# Copy to ~/.cryptobot/.env or project ./.env and fill values

# LLM / DeepSeek
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat
LLM_API_KEY=

# LLM guardrails (cost/safety)
LLM_MIN_COOLDOWN_SEC=300
LLM_MIN_ATR_RATIO=0.0015

# Optional exchange testnet keys (for ccxt testnet broker)
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Hyperliquid
HYPERLIQUID_WALLET_ADDRESS=
# Use ONLY one of the following depending on environment
HYPERLIQUID_TESTNET_PRIVATE_KEY=
HYPERLIQUID_LIVE_PRIVATE_KEY=

# Optional: override API endpoints
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz
HYPERLIQUID_LIVE_URL=https://api.hyperliquid.xyz






